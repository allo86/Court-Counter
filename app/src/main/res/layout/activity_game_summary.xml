<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.scenes.summary.GameSummaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.allo.courtcounter.presentation.scenes.common.TeamSummaryView
            android:id="@+id/tsv_local_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.allo.courtcounter.presentation.scenes.common.TeamSummaryView
            android:id="@+id/tsv_away_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/team_score_vertical_margin"
            android:text="@string/bt_new_game"/>

    </LinearLayout>

</ScrollView>