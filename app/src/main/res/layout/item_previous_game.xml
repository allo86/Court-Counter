<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/previous_game_vertical_margin_half"
        android:layout_marginRight="@dimen/previous_game_vertical_margin_half"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_local_team_name"
            style="@style/previous_game_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/previous_game_vertical_margin_half"
            android:layout_marginRight="@dimen/previous_game_vertical_margin_half"
            android:layout_weight="1"
            android:gravity="end"
            tools:text="Local team"/>

        <TextView
            android:id="@+id/tv_local_team_score"
            style="@style/previous_game_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="45"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/previous_game_vertical_margin_half"
        android:layout_marginStart="@dimen/previous_game_vertical_margin_half"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_away_team_score"
            style="@style/previous_game_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="45"/>

        <TextView
            android:id="@+id/tv_away_team_name"
            style="@style/previous_game_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/previous_game_vertical_margin_half"
            android:layout_marginStart="@dimen/previous_game_vertical_margin_half"
            android:layout_weight="1"
            android:gravity="start"
            tools:text="Away team"/>

    </LinearLayout>

</LinearLayout>