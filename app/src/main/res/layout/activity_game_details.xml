<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.scenes.details.GameDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/team_score_vertical_margin"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/team_score_horizontal_margin"
            android:paddingRight="@dimen/team_score_horizontal_margin">

            <com.allo.courtcounter.presentation.scenes.common.TeamScoreView
                android:id="@+id/tsv_local_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/team_score_horizontal_margin"
                android:layout_marginRight="@dimen/team_score_horizontal_margin"
                android:background="@color/black"/>

            <com.allo.courtcounter.presentation.scenes.common.TeamScoreView
                android:id="@+id/tsv_away_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/team_score_vertical_margin"
            android:text="@string/bt_reset"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/team_score_vertical_margin"
            android:text="@string/bt_end"/>

    </LinearLayout>

</ScrollView>